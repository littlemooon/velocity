{
  "name": "velocity",
  "version": "1.0.0",
  "license": "MIT",
  "author": "fredwright0@gmail.com",
  "scripts": {
    "build:assets": "run-p copy:client copy:dist copy:static",
    "build:client": "npm --prefix client run build",
    "build:server": "npm --prefix server/functions run build",
    "build": "npm run clean && run-p build:client build:server && npm run build:assets",
    "clean": "rimraf server/public/assets/* server/functions/lib/*",
    "copy:client": "cp -R client/.nuxt server/functions/lib/nuxt",
    "copy:dist": "cp -R client/.nuxt/dist/ server/public/assets",
    "copy:static": "cp -R client/static/ server/public",
    "deploy": "npx firebase deploy",
    "dev": "npm --prefix client run dev",
    "lint": "npx tslint --fix -p .",
    "precommit": "npm run lint",
    "postinstall": "npm --prefix client i && npm --prefix server/functions i",
    "predeploy": "npm run build",
    "serve": "npx firebase serve --only functions,hosting"
  },
  "devDependencies": {
    "cross-env": "^5.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.3"
  }
}
